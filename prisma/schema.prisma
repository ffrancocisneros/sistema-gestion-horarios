// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id        String      @id @default(cuid())
  name      String
  hourlyRate Float?      // Valor por hora en la moneda local (opcional)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  
  workShifts WorkShift[]
  activityLogs ActivityLog[]
  shiftPlanEntries ShiftPlanEntry[]
  
  @@index([createdAt])
  @@map("employees")
}

model WorkShift {
  id        String    @id @default(cuid())
  employeeId String
  employee  Employee  @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  
  date      DateTime  @db.Date // Fecha del turno
  
  // Primer turno (obligatorio si se registra un turno)
  entryTime1 DateTime? // Hora de entrada del primer turno
  exitTime1  DateTime? // Hora de salida del primer turno
  
  // Segundo turno (opcional)
  entryTime2 DateTime? // Hora de entrada del segundo turno
  exitTime2  DateTime? // Hora de salida del segundo turno
  
  isPaid     Boolean   @default(false) // Si el día está marcado como pagado
  
  createdAt  DateTime  @default(now())
  
  @@unique([employeeId, date]) // Un empleado solo puede tener un registro por día
  @@index([employeeId])
  @@index([date])
  @@index([isPaid])
  @@index([employeeId, date])
  @@map("work_shifts")
}

model ActivityLog {
  id        String    @id @default(cuid())
  action    String    // Tipo de acción: "CREATE_EMPLOYEE", "UPDATE_EMPLOYEE", "DELETE_EMPLOYEE", "CREATE_SHIFT", "UPDATE_SHIFT", "DELETE_SHIFT", "TOGGLE_PAYMENT"
  employeeId String?  // ID del empleado afectado (puede ser null para acciones generales)
  employee  Employee? @relation(fields: [employeeId], references: [id], onDelete: SetNull)
  details   String?   // Información adicional sobre la acción
  timestamp DateTime  @default(now())
  
  @@index([employeeId])
  @@index([action])
  @@index([timestamp])
  @@index([employeeId, timestamp])
  @@map("activity_logs")
}

// Modelos para planificación de turnos (plan visual, no afecta turnos reales)
model ShiftPlanWeek {
  id          String    @id @default(cuid())
  weekStartDate DateTime  @db.Date // Lunes de la semana
  name        String?   // Nombre opcional del plan
  description String?   // Descripción opcional
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  entries     ShiftPlanEntry[]
  
  @@unique([weekStartDate])
  @@index([weekStartDate])
  @@map("shift_plan_weeks")
}

model ShiftPlanEntry {
  id          String    @id @default(cuid())
  planWeekId  String
  planWeek    ShiftPlanWeek @relation(fields: [planWeekId], references: [id], onDelete: Cascade)
  
  employeeId  String
  employee    Employee  @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  
  date        DateTime  @db.Date // Día específico del plan
  startTime   String    // Hora de inicio (formato "HH:mm")
  endTime     String    // Hora de fin (formato "HH:mm")
  note        String?   // Nota opcional
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@index([planWeekId])
  @@index([employeeId])
  @@index([date])
  @@map("shift_plan_entries")
}

